<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<RootNamespace>shutter_p2p</RootNamespace>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<EnablePreviewFeatures>true</EnablePreviewFeatures>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="NReco.Logging.File" Version="1.2.0" />
	</ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include="Dto\gossip.proto" CopyToOutputDirectory="Never" />
		<AdditionalFiles Include="Dto\any.proto" CopyToOutputDirectory="Never" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\..\libp2p\Libp2p\Libp2p.csproj" />
      <ProjectReference Include="..\..\libp2p\Libp2p.Generators.Protobuf\Libp2p.Generators.Protobuf.csproj"  OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Google.Protobuf" Version="3.25.1" />
		<!-- <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" /> -->
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" >
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
  	</ItemGroup>
</Project>
